    <form action="/" method="post">
        <div class="form-floating mb-3">
        <input type="text" name="newItem">
        </div>
        <div class="form-floating mb-3">
        <button type="submit" name="Button" class="btn btn-primary btn-sm">Add</button>
        </div>
    </form>
    
    <p class="mt-5 mb-3 text-muted">&copy; Oliver Tepper</p>
    
    </main>
